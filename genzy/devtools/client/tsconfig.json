{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsxImportSource": "react",
    "jsx": "react-jsx",
    "lib": ["es6", "es2019", "dom"],
    "esModuleInterop": true,
    "paths": {
      "@index/*": ["./src/index/*"],
      "@core/*": ["./src/core/*"],
      "@features/*": ["./src/features/*"]
    }
  }
}
